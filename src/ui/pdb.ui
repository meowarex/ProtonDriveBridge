<?xml version='1.0' encoding='UTF-8'?>
<interface>
  <requires lib="gtk" version="4.12"/>
  
  <!-- Main Window -->
  <object class="GtkWindow" id="main_window">
    <property name="default-width">800</property>
    <property name="default-height">600</property>

    <!-- Header Bar -->
    <property name="titlebar">
      <object class="GtkHeaderBar">
        <!-- Left Side Icon -->
        <child type="start">
          <object class="GtkButton" id="icon_button">
            <child>
              <object class="GtkOverlay">
                <!-- Settings Icon (Default) -->
                <child>
                  <object class="GtkImage" id="settings_icon">
                    <property name="icon-name">preferences-system-symbolic</property>
                    <property name="pixel-size">16</property>
                    <style>
                      <class name="visible-icon"/>
                    </style>
                  </object>
                </child>
                <!-- Heart Icon (On Hover) -->
                <child type="overlay">
                  <object class="GtkImage" id="heart_icon">
                    <property name="icon-name">emblem-favorite-symbolic</property>
                    <property name="pixel-size">16</property>
                    <style>
                      <class name="hidden-icon"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <style>
              <class name="header-icon-button"/>
            </style>
          </object>
        </child>

        <!-- Center Navigation Buttons -->
        <property name="title-widget">
          <object class="GtkBox">
            <property name="spacing">6</property>
            <!-- Page 1 Button -->
            <child>
              <object class="GtkToggleButton" id="page1_button">
                <property name="label">Page 1</property>
                <property name="active">true</property>
                <style>
                  <class name="custom-toggle-button"/>
                </style>
              </object>
            </child>
            <!-- Page 2 Button -->
            <child>
              <object class="GtkToggleButton" id="page2_button">
                <property name="label">Page 2</property>
                <style>
                  <class name="custom-toggle-button"/>
                </style>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>

    <!-- Main Content Stack -->
    <child>
      <object class="GtkStack" id="main_stack">
        <!-- Page 1 Content -->
        <child>
          <object class="GtkStackPage">
            <property name="name">page1</property>
            <property name="title">Page 1</property>
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="valign">center</property>
                <property name="halign">center</property>
                <child>
                  <object class="GtkButton" id="url_button1">
                    <property name="label">Page 1</property>
                    <style>
                      <class name="custom-button"/>
                    </style>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

        <!-- Page 2 Content -->
        <child>
          <object class="GtkStackPage">
            <property name="name">page2</property>
            <property name="title">Page 2</property>
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="valign">center</property>
                <property name="halign">center</property>
                <child>
                  <object class="GtkButton" id="url_button2">
                    <property name="label">Page 2</property>
                    <style>
                      <class name="custom-button"/>
                    </style>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
